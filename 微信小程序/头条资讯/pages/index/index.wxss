/* pages/index/index.wxss */
.body{
    display: flex;
    flex-direction: column;
}

.topview{
    height: 397.5rpx;
}

.topview-item{
    width: 100%;
    height: 100%;
}

.topview-item-icon{
    width: 100%;
    height: 100%;
}

.cell{
    display: flex;
    /*background-color: red;*/
    border-bottom: 1rpx solid rgb(240,240,240);
}

.cell-icon{
    width: 200rpx;
    height: 158rpx;
    padding: 18rpx 18rpx;
    border-radius: 16rpx;
}

.cell-viewright{
    height: 158rpx;
    width: 67%;
    background-color: red;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.cell-rightview-title{
    font-size: 30rpx;
}

.cell-rightview-content{
    font-size: 25rpx;
    color: gray;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
}

.cell-rightview-bottom{
    font-size: 27rpx;
    display: flex;
    justify-content: space-between;
    color: gray;
}